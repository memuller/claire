<% form_for @subcategory do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= label :category, :id, "Select parent category:" %> <br />
    <%= collection_select :category, :id, Category.all, :id, :name %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
